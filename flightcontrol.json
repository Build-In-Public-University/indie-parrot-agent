{
    "$schema": "https://app.flightcontrol.dev/schema.json",
    "environments": [
        {
            "id": "alpha",
            "name": "Alpha",
            "region": "us-east-2",
            "source": {
                "branch": "main"
            },
            "services": [
                {
                    "id": "agent",
                    "name": "API Server",
                    "type": "web",
                    "target": {
                        "type": "fargate"
                    },
                    "buildType": "nixpacks",
                    "ci": {
                        "type": "ec2"
                    },
                    "cpu": 0.5,
                    "memory": 1024,
                    "minInstances": 1,
                    "maxInstances": 1,
                    "port": 4111,
                    "buildCommand": "npm run build",
                    "startCommand": "node .mastra/output/index.mjs",
                    "envVariables": {
                        "DATABASE_URL": {
                            "fromService": {
                                "id": "db",
                                "value": "dbConnectionString"
                            }
                        },
                        "NODE_ENV": "production"
                    },
                    "healthCheckPath": "/health"
                },
                {
                    "id": "db",
                    "type": "rds",
                    "engine": "postgres",
                    "engineVersion": "15",
                    "instanceSize": "db.t3.micro",
                    "storage": 20
                }
            ]
        }
    ]
}